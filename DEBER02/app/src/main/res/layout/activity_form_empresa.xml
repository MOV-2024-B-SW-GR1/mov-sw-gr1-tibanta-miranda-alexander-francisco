<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormEmpresaActivity">

    <TextView
        android:id="@+id/tvTituloEmpresa"
        android:layout_width="266dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:paddingBottom="16dp"
        android:text="Agregar/Editar Empresa"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNombreEmpresa"
        android:layout_width="271dp"
        android:layout_height="44dp"
        android:layout_marginBottom="44dp"
        android:hint="Nombre de la Empresa"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/etCantidadEmpleados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etCantidadEmpleados"
        android:layout_width="271dp"
        android:layout_height="47dp"
        android:layout_marginBottom="40dp"
        android:hint="Cantidad de Empleados"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/etDireccionEmpresa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etDireccionEmpresa"
        android:layout_width="272dp"
        android:layout_height="45dp"
        android:hint="DirecciÃ³n"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGuardarEmpresa"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDireccionEmpresa" />

</androidx.constraintlayout.widget.ConstraintLayout>